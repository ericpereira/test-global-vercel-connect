{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "migration.ts", "static", "layouts"],
  "ts-node": {
    "files": true
  },
  "files": [
    "./index.ts"
  ]
}
